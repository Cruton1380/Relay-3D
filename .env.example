# Relay Platform Service Configuration
# Copy this file to .env and modify as needed

# Main Backend Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Service Ports
HARDWARE_SERVICE_PORT=4001
SOCIAL_SERVICE_PORT=4002
CHANNEL_SERVICE_PORT=4003

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/relay_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=relay_db
DB_USER=relay_user
DB_PASSWORD=your_secure_password

# Security Configuration
JWT_SECRET=your_256_bit_jwt_secret_key_here_change_in_production
JWT_EXPIRY=24h
JWT_ISSUER=relay-platform
ENCRYPTION_KEY=your_32_byte_encryption_key_for_biometric_vectors
BIOMETRIC_ENCRYPTION_KEY=your_32_byte_encryption_key_for_biometric_vectors
VECTOR_SALT=your_random_salt_for_vector_hashing

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PASSWORD_DANCE_MAX=5

# Biometric Security
BIOMETRIC_THRESHOLD_AUDIO=0.85
BIOMETRIC_THRESHOLD_VISION=0.80
MIN_BIOMETRIC_SCORE=0.85
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Audio Processing Configuration
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=1
MFCC_COEFFICIENTS=13

# Computer Vision Configuration  
FACE_DETECTION_CONFIDENCE=0.8
LANDMARK_DETECTION_MODEL=68_point
GESTURE_ANALYSIS_FRAME_RATE=30

# Signal Protocol Configuration
SIGNAL_PROTOCOL_STORE_PATH=./data/signal-protocol
ENABLE_GROUP_ENCRYPTION=true

# Hardware Scanning Configuration
BLUETOOTH_SCAN_INTERVAL=10000
WIFI_SCAN_INTERVAL=15000
DEVICE_CLEANUP_INTERVAL=300000

# Channel Configuration
MAX_CHANNEL_MEMBERS=100
DEFAULT_CHANNEL_RADIUS=1000
ENABLE_PROXIMITY_CHANNELS=true
ENABLE_REGIONAL_CHANNELS=true
ENABLE_GLOBAL_CHANNELS=true

# Social Configuration
MAX_FRIENDS_PER_USER=500
FRIEND_REQUEST_EXPIRY=604800000
ENABLE_MUTUAL_FRIENDS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/application.log
ENABLE_ERROR_LOGGING=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Development Configuration
ENABLE_DEBUG_LOGS=true
DISABLE_AUTH_IN_DEV=false
MOCK_HARDWARE_SCANNING=false
