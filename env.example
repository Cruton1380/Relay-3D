# Relay Network Environment Configuration
# Copy this file to .env.local for development or .env.production for production

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_EXPIRY=1h
CSRF_SECRET=your-csrf-secret-here
PASSWORD_DANCE_MOVES=5
MIN_BIOMETRIC_SCORE=0.85
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
SESSION_TIMEOUT=1800000
REQUIRE_TWO_FACTOR=false

# Server Configuration
SERVER_PORT=3002
SERVER_HOST=localhost
CORS_ORIGINS=http://localhost:3000,http://localhost:5175,https://relay.network
USE_TLS=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Storage Configuration
DATA_DIR=./data
MAX_FILE_SIZE=52428800
ENCRYPT_DATA=false

# Network Configuration
P2P_ENABLED=false
BOOTSTRAP_NODES=
MAX_PEERS=20
DISCOVERY_INTERVAL=60000

# Voting Configuration
MINIMUM_VOTING_AGE=18
VOTE_COOLDOWN_PERIOD=86400000
REQUIRE_REGION=true

# Onboarding Configuration
INVITE_REQUIRED=true
BIOMETRIC_ENROLLMENT=true
DEVICE_ATTESTATION_REQUIRED=false

# Invites Configuration
INVITES_PER_NEW_USER=3
FOUNDER_IDS=
DECAY_FACTOR=1
MIN_INVITES=1
INVITE_EXPIRY_DAYS=14

# Logging Configuration
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=false
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# Environment
NODE_ENV=development
