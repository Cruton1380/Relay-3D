{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start AI Agent Chat",
			"type": "shell",
			"command": "node",
			"args": [
				"src/backend/ai-agent/aiAgentCLI.mjs",
				"chat"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "Start Frontend Dev Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev:frontend"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "Start Backend Server",
			"type": "shell",
			"command": "node",
			"args": [
				"src/backend/server.mjs"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "Verify Vote Endpoint",
			"type": "shell",
			"command": "node",
			"args": [
				"src/backend/ai-agent/vote-verification.mjs"
			],
			"group": "test",
			"isBackground": false,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		}
	]
}