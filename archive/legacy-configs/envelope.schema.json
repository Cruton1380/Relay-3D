{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "relay.commit.envelope.v1",
  "title": "Relay Filament Commit Envelope v1",
  "description": "Universal commit metadata envelope for deterministic Git-based history substrate",
  "type": "object",
  "required": [
    "envelope_version",
    "domain_id",
    "commit_class",
    "scope",
    "step",
    "actor",
    "selection",
    "change",
    "validation"
  ],
  "properties": {
    "envelope_version": {
      "type": "string",
      "const": "1.0"
    },
    "domain_id": {
      "type": "string",
      "pattern": "^[a-z]+\\.[a-z_]+$",
      "description": "Must match a registered domain config"
    },
    "commit_class": {
      "type": "string",
      "enum": [
        "CELL_EDIT",
        "FORMULA_EDIT",
        "ROW_CREATE",
        "ROW_ARCHIVE",
        "RANGE_EDIT",
        "ATTACHMENT_ADD",
        "OPERATOR_RUN"
      ]
    },
    "scope": {
      "type": "object",
      "required": ["scope_type", "repo_id", "branch_id"],
      "properties": {
        "scope_type": {
          "type": "string",
          "enum": ["repo", "branch", "bundle"]
        },
        "repo_id": {
          "type": "string",
          "minLength": 1
        },
        "branch_id": {
          "type": "string",
          "minLength": 1
        },
        "bundle_id": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    },
    "step": {
      "type": "object",
      "required": ["step_policy", "scope_step", "time_hint_utc"],
      "properties": {
        "step_policy": {
          "type": "string",
          "const": "DENSE_SCOPE_STEP"
        },
        "scope_step": {
          "type": "integer",
          "minimum": 0
        },
        "time_hint_utc": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "actor": {
      "type": "object",
      "required": ["actor_id", "actor_kind"],
      "properties": {
        "actor_id": {
          "type": "string",
          "minLength": 1
        },
        "actor_kind": {
          "type": "string",
          "enum": ["human", "service", "automation"]
        },
        "device_id": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    },
    "selection": {
      "type": "object",
      "required": ["selection_id", "targets"],
      "properties": {
        "selection_id": {
          "type": "string",
          "pattern": "^sel:v1/.+/.+/\\d+$"
        },
        "targets": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/target"
          }
        }
      },
      "additionalProperties": false
    },
    "change": {
      "type": "object",
      "required": [
        "rows_touched",
        "cells_touched",
        "files_written",
        "derived_artifacts",
        "root_evidence_refs"
      ],
      "properties": {
        "rows_touched": {
          "type": "array",
          "items": { "type": "string" }
        },
        "cells_touched": {
          "type": "array",
          "items": { "$ref": "#/$defs/cellTouch" }
        },
        "files_written": {
          "type": "array",
          "items": { "type": "string" }
        },
        "derived_artifacts": {
          "type": "array",
          "items": { "type": "string" }
        },
        "root_evidence_refs": {
          "type": "array",
          "items": { "type": "string" }
        },
        "row_create": {
          "$ref": "#/$defs/rowCreate"
        },
        "row_archive": {
          "$ref": "#/$defs/rowArchive"
        },
        "formula": {
          "$ref": "#/$defs/formula"
        },
        "range_edit": {
          "$ref": "#/$defs/rangeEdit"
        },
        "attachment": {
          "$ref": "#/$defs/attachment"
        },
        "operator": {
          "$ref": "#/$defs/operator"
        }
      },
      "additionalProperties": false
    },
    "validation": {
      "type": "object",
      "required": ["schema_version", "hashes"],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "domain-registry-v1"
        },
        "hashes": {
          "type": "object",
          "required": ["envelope_sha256", "payload_manifest_sha256"],
          "properties": {
            "envelope_sha256": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$"
            },
            "payload_manifest_sha256": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "$defs": {
    "target": {
      "type": "object",
      "required": ["t"],
      "properties": {
        "t": {
          "type": "string",
          "enum": ["ROW", "CELL", "FACE", "STEP_RANGE", "SPATIAL"]
        },
        "row_key": {
          "type": ["string", "null"]
        },
        "col_id": {
          "type": ["string", "null"]
        },
        "face": {
          "type": ["string", "null"],
          "enum": ["plusX", "minusX", "plusY", "minusY", "plusZ", "minusZ", null]
        },
        "step_range": {
          "type": ["string", "null"],
          "pattern": "^\\d+\\.\\.\\d+$"
        },
        "spatial": {
          "type": ["object", "null"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["country", "polygon", "geohash", "bbox"]
            },
            "value": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    },
    "cellTouch": {
      "type": "object",
      "required": ["row_key", "col_id", "before", "after", "edit_kind"],
      "properties": {
        "row_key": { "type": "string" },
        "col_id": { "type": "string" },
        "before": {},
        "after": {},
        "edit_kind": {
          "type": "string",
          "enum": ["scalar", "json", "text"]
        },
        "sheet_view": { "type": "string" }
      },
      "additionalProperties": false
    },
    "rowCreate": {
      "type": "object",
      "required": ["row_key", "row_type", "display_name", "created_from"],
      "properties": {
        "row_key": { "type": "string" },
        "row_type": { "type": "string" },
        "display_name": { "type": "string" },
        "created_from": {
          "type": "string",
          "enum": ["seed", "fork", "import"]
        },
        "source_ref": { "type": ["string", "null"] }
      },
      "additionalProperties": false
    },
    "rowArchive": {
      "type": "object",
      "required": ["row_key", "before_status", "after_status", "reason"],
      "properties": {
        "row_key": { "type": "string" },
        "before_status": { "type": "string" },
        "after_status": {
          "type": "string",
          "enum": ["archived", "closed", "replaced"]
        },
        "reason": { "type": "string" },
        "replacement_row_key": { "type": ["string", "null"] }
      },
      "additionalProperties": false
    },
    "formula": {
      "type": "object",
      "required": ["row_key", "formula_id", "language", "diff_summary"],
      "properties": {
        "row_key": { "type": "string" },
        "formula_id": { "type": "string" },
        "before_ref": { "type": "string" },
        "after_ref": { "type": "string" },
        "language": {
          "type": "string",
          "enum": ["excel", "sql", "js", "prompt", "dsl"]
        },
        "diff_summary": { "type": "string" }
      },
      "additionalProperties": false
    },
    "rangeEdit": {
      "type": "object",
      "required": ["range_kind", "targets"],
      "properties": {
        "range_kind": {
          "type": "string",
          "enum": ["reorder", "bulk_edit", "normalize", "apply_patch"]
        },
        "targets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "row_key": { "type": "string" },
              "col_id": { "type": ["string", "null"] }
            }
          }
        },
        "reorder": {
          "type": "object",
          "properties": {
            "before_order": {
              "type": "array",
              "items": { "type": "string" }
            },
            "after_order": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "attachment": {
      "type": "object",
      "required": ["attachment_kind", "path", "sha256", "mime", "size_bytes", "linked_to"],
      "properties": {
        "attachment_kind": {
          "type": "string",
          "enum": ["root_evidence", "derived_artifact"]
        },
        "path": { "type": "string" },
        "sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "mime": { "type": "string" },
        "size_bytes": {
          "type": "integer",
          "minimum": 0
        },
        "linked_to": {
          "type": "object",
          "required": ["scope_step"],
          "properties": {
            "row_key": { "type": ["string", "null"] },
            "scope_step": { "type": "integer" },
            "face": {
              "type": ["string", "null"],
              "enum": ["plusX", "minusX", "plusY", "minusY", "plusZ", "minusZ", null]
            }
          }
        }
      },
      "additionalProperties": false
    },
    "operator": {
      "type": "object",
      "required": ["operator_id", "inputs", "outputs", "status"],
      "properties": {
        "operator_id": { "type": "string" },
        "inputs": { "type": "object" },
        "outputs": { "type": "object" },
        "status": {
          "type": "string",
          "enum": ["success", "failure"]
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    }
  }
}

