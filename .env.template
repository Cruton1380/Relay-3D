# Environment Configuration Template
# Copy to .env for development or set as environment variables for production

# Repository Configuration
# Supported values: 'file' (default) or 'mongo'
REPOSITORY_TYPE=file

# MongoDB Configuration (required when REPOSITORY_TYPE=mongo)
# MONGODB_URI=mongodb://localhost:27017/relay
# MONGODB_DB_NAME=relay
# MONGODB_MAX_POOL_SIZE=10
# MONGODB_SERVER_SELECTION_TIMEOUT=5000

# File Storage Configuration (optional when REPOSITORY_TYPE=file)
# DATA_DIR=./data
# BACKUP_DIR=./data/backups

# Application Configuration
NODE_ENV=development
PORT=3000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
JWT_SECRET=your-secret-key-here
SESSION_SECRET=your-session-secret-here

# Example Production Configuration for MongoDB:
# REPOSITORY_TYPE=mongo
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/relay?retryWrites=true&w=majority
# NODE_ENV=production
# LOG_LEVEL=warn
