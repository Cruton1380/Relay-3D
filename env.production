# Relay Network - Production Environment
# This file is used for production deployments

# Frontend Configuration
VITE_API_BASE_URL=https://api.relay.network
VITE_WS_BASE_URL=wss://api.relay.network
VITE_APP_TITLE=Relay Network
VITE_DEBUG_MODE=false

# Backend Configuration
PORT=3002
NODE_ENV=production
HOST=0.0.0.0
CORS_ORIGINS=https://relay.network,https://www.relay.network

# Security (Production - Use secure values)
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_EXPIRY=1h
CSRF_SECRET=your-csrf-secret-here

# Storage
DATA_DIR=./data
MAX_FILE_SIZE=52428800
ENCRYPT_DATA=true

# Logging
LOG_LEVEL=info
LOG_CONSOLE=false
LOG_FILE=true

# Production Features
ENABLE_DEBUG_LOGGING=false
ENABLE_TEST_DATA=false
BYPASS_RATE_LIMITING=false
MOCK_BIOMETRIC_SERVICE=false
