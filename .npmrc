# NPM Performance Configuration
# Reduce package installation overhead and improve caching

# Disable package funding messages
fund=false

# Disable update-notifier
update-notifier=false

# Enable aggressive caching
cache-max=2592000000
cache-min=86400

# Disable audit for faster installs (re-enable for security checks)
audit=false

# Disable progress bars for faster CI/scripts
progress=false

# Use prefer-offline for faster installs
prefer-offline=true

# Disable optional dependencies for smaller installs
optional=false

# Reduce log level
loglevel=warn

# Engine strict mode
engine-strict=true

# Save exact versions
save-exact=true

# Disable package-lock for potential faster installs (optional)
# package-lock=false
